<h1>User#show</h1>
<body>
    <% flash.each do |message_type, message| %>
      <%= content_tag :div, message, class: message_type %>
    <% end %>  
<!--共通UI-->
<h2>User info</h2>
<p><%= image_tag @user.get_profile_image(100,100) %></p>
<table>
    <tbody>
        <tr></tr>
        <tr>
            <th>name</th>
            <th><%= @user.name %></th>
        </tr>
        <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
        </tr>
    </tbody>
</table>
<div>
    <%= link_to "user_edit", edit_user_path(@user)%>
</div>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>  


<!--showページユーザー投稿一覧-->

<h2>Books</h2>

<table>
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
        </tr>
        <% end %>
    </tbody>
</table>

</body>