<div class="col-md-3">

<!--User info-->
  <h2>User info</h2>
  <p><%= image_tag user.get_profile_image(100,100) %></p>
  <table class="table">
     <tbody>
        <tr></tr>
        <tr>
            <th>name</th>
            <th><%= user.name %></th>
        </tr>
        <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
        </tr>
     </tbody>
  </table>
  <div class="row">
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog" aria-hidden="true"></i>
    <% end %>
  </div>

<!--New book-->
  <h2 class="mt-3">New book</h2>
  <%= form_with model: book_new do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <br><%= f.text_field :title, class: "form-control book_title" %>
    </div>
    
    <div class="form-group">
      <label class="book_opinion">Opinion</label>
      <br><%= f.text_area :body, class: "form-control book_body" %>
    </div>
    
    <div class="form-group">
      <%= f.submit 'Create Book', class: "btn btn-success" %>
    </div>
  <% end %>

</div>
<!--共通ここまで-->