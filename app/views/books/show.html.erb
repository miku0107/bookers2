<h1>Book#showページ</h1>

<div>
    <%= flash[:notice] %>

    <!--共通UI-->
    
    <!--投稿詳細-->
    <div>
        <h2>Book detail</h2>
        <table>
            <tbody>
                
                <tr>
                    <% @books.each do |book| %>
                    <td><!--投稿したユーザのshowページへ-->
                        <%= image_tag 'no_image.jpg'%><%= @book.user.name %></td>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= @book.body %></td>
                    <!--投稿したユーザーとログインしているユーザーが一致している場合表示-->
                    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                    <td><% if @book.user == current_user %>
                          <%= link_to "Destroy", book_path(@book), method: :delete %>
                        <% end %></td>
                    <!--ここまで-->
                    <% end %>
                </tr>
            </tbody>
        </table>
    </div>
</div>