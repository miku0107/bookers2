<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!--User info-->


<!--New book-->
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>  

<!--Books-->
<div>
    <h2>Books</h2>
    <table>
        <thead><tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr></thead>
        <tbody>
          <% @books.each do |book| %>    
          <tr>
            <td><%= image_tag 'sample-author1.jpg' %></td>
            <td><%= book.title %></td>
            <td><%= book.opinion %></td>
        </tr></tbody>
    </table>
</div>