<h1>Book#indexページ</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--共通-->
<!--User info-->



<!--New book-->
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>  
<!--共通ここまで-->


<!--Books-->
<div>
    <h2>Books</h2>
    <table>
        <thead><tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr></thead>
        <tbody>
          <% @books.each do |book| %>    
          <tr>
            <td><!--ユーザのプロフィール画像をクリックするとそのユーザページへリンク-->
                <%= image_tag 'no_image.jpg' %></td>
            <td><!--投稿されたページのタイトルをクリックすると投稿詳細ページへリンク-->
                <%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
    </table>
</div>